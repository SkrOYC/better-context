{
	"name": "btca",
	"author": "Ben Davis",
	"version": "0.4.1",
	"description": "CLI tool for asking questions about technologies using OpenCode",
	"type": "module",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/bmdavis419/better-context"
	},
	"keywords": [
		"cli",
		"ai",
		"docs"
	],
	"engines": {
		"bun": ">=1.1.0"
	},
	"bin": {
		"btca": "./bin.js"
	},
	"files": [
		"bin.js",
		"dist"
	],
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"build": "bun run scripts/build.ts",
		"build:targets": "bun run scripts/build-binaries.ts",
		"setup:platforms": "bun install --cpu=x64 --os=darwin && bun install --cpu=x64 --os=linux && bun install --cpu=arm64 --os=linux && bun install --cpu=x64 --os=win32",
		"build:artifacts": "bun run setup:platforms && bun run build && bun run build:targets",
		"prepublishOnly": "bun run build:artifacts",
		"check": "tsgo --noEmit",
		"test": "bun test",
		"cli": "bun run src/index.ts",
		"cli:ask": "bun run src/index.ts ask",
		"cli:serve": "bun run src/index.ts serve",
		"cli:open": "bun run src/index.ts open"
	},
	"devDependencies": {
		"@opencode-ai/sdk": "^1.0.119",
		"@types/bun": "latest",
		"@typescript/native-preview": "^7.0.0-dev.20251215.1",
		"prettier": "^3.7.4",
		"typescript": "^5.9.3"
	},
	"dependencies": {
		"commander": "^12.0.0",
		"@commander-js/extra-typings": "^12.0.0",
		"isomorphic-git": "^1.36.1",
		"memfs": "^4.51.1"
	}
}